<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_input_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textSize="30dp"
            android:gravity="right" />

        <TextView
            android:id="@+id/tv_output_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:onClick="onClickAction"
                        android:text="C"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:backgroundTint="#D8CACA" />

                    <Button
                        android:id="@+id/btnBracketLeft"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        app:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text="("
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnBracketRight"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        app:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text=")"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnDivide"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="7"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnMultiply"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text="X"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnMin"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D8CACA"
                        android:onClick="onClick"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDot"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClick"
                        android:text="."
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Primary"
                        android:onClick="onClickNumber"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/btn_backspace"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:onClick="onClickAction"
                        android:src="@drawable/ic_baseline_backspace_24"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnEqual"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D8CACA"
                        android:onClick="onClickAction"
                        android:text="="
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</layout>
